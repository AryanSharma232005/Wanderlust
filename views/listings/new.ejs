<% layout("/layouts/boilerplate.ejs") %>

<div class="container mt-4">
    <h3 class="mb-4">Create a New Listing</h3>
    <form method="POST" action="/listings"  novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" id="title" placeholder="Add a catchy title" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" id="description" rows="3" placeholder="Enter description" required></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image][url]" class="form-control" id="image" placeholder="Enter image URL/Link">
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" class="form-control" id="price" placeholder="1200"  required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" class="form-control" id="country" placeholder="India" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" id="location" placeholder="Jaipur, Rajasthan" required>
        </div>

        <button type="submit" class="btn btn-danger">Add</button>
    </form>
</div>
